<%= simple_form_for @post do |f| %>

	<%= f.input :title %>
	<%= f.input :topic, :collection => ['Technology', 'Language', 'Vocational Skill'] %>
	<%= f.input :location %>
	<%= f.input :price %>
	<%= f.input :description %> 
	<%= f.select :looking_for, [['I am looking for this service', true], ['I am offering this service', false]] %>
	<br><br>

	<%= f.submit %>
<% end %>