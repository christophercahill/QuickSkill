<div class="container">

        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <hr>
                    <h2 class="intro-text text-center"><strong>Teach</strong> a Man
                        To Fish...
                    </h2>
                    <hr>
                </div>
                <div class="col-lg-12 text-center">
                	<% @posts.each do |post| %>
                      <% 
    user_id = post.user_id %>
   <% @user = User.find(user_id) %>
  <%  @profile = @user.profile %>
                    <h2><%= link_to post.title, post_path(post), class: 'link-to-text-color' %>
                        <br>
                        <small><%= @profile.name%></small>
                    </h2>
                    <p><%= post.description %></p>
                    
                    <hr>
                    <% end %>
                </div>
                
                
            </div>
        </div>

    </div>
    <!-- /.container -->

    


