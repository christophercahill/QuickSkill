<% url = @photo.image_url %>
<% usable_url = "#{url}" %>

<div class="row">
  <div class="box">
    <div class="col-lg-12">
      <br>
      <hr>
      <h2 class="intro-text text-center"><%= link_to @photo.caption, photo_path(@photo) %>
      </h2>
      <hr>

      <hr>
      <h2 class="intro-text text-center"><img id="image" src=<%="#{usable_url}"%> alt="" width="400">
      </h2>
      <hr>

      <hr>
      <h2 class="intro-text text-center">From: <%= @photo.email %>
      </h2>
      <hr>

      <% if current_user.photos.include? @photo %>

      <hr>
      <h2 class="intro-text text-center"><%= link_to 'Edit', edit_photo_path(@photo) %> | <%= link_to 'Destroy', photo_path(@photo),
        method: :delete,
        data: { confirm: 'Are you sure?' } %>
      </h2>
      <hr>
      <% end %>


      <hr>
      <h2 class="intro-text text-center">
      Comments:<br>
      <br>
      <%= render @photo.comments %> 
      <br>
      Add a New Comment: 
      <br>
      <%= render 'comments/form' %>
      </h2>
      <hr>

      <hr>
      <h2 class="intro-text text-center"><%= link_to 'Home', photos_path %>
      </h2>
      <hr>

    </div>
  </div>
</div>





