
<br><br><br>

<div class="container">
	<div class="row">
		<div class="box">
			<div class="col-lg-12">
				<div class="row">

					<div class="col-md-4"></div>

					<div class="col-md-4"><h2>Log In
					</h2><%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
					<div class="form-inputs">
						<%= f.input :email, required: false, autofocus: true %>
						<%= f.input :password, required: false %>
						<%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
					</div>

					<div class="form-actions">
					<%= f.button :submit, "Log in", :class => "form-button" %>
					</div>
					<% end %>

					<div class="col-md-4"></div>
				</div>
			</div>
		</div>
	</div>
</div>




