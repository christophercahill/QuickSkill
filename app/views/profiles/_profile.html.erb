<div class="row">
	<div class="box">
		<div class="col-lg-12">
			<div class="post-heading">

				<div class="col-lg-12">
					<div class="profile-heading">
						<hr>
						<h1><%= @profile.name %> </h1>
						<hr>
					</div>
				</div>
				<img src="<%= @profile.image_url %>", alt ="", width="250">
				<% if current_user.id == @profile.user_id %>
				<h3><b>EMAIL</b></h3>
				<p><%= @user.email %></p>
				<% end %>
				<br>
				<h3><b>LOCATION</b></h3>
				<p><%= @profile.location %></p>
				<br>
				<h3><b>BIOGRAPHY</b></h3>
				<p><%= @profile.biography %></p>
				<br>
				<h3><b>PHONE NUMBER</b></h3>
				<p><%= @profile.phone_number %></p>
				<br> <br>

				<% if current_user = @profile.user %>
				<p><%= link_to "Edit Profile", edit_user_profile_path(@profile.user_id, @profile.id), class: 'link-to-text-color' %> </p>
				<% end %>
				<br> <br>
			</div>
		</div>
	</div>
	<div class="box">
		<div class="col-lg-12">
			<div class="post-heading">
				<h2>Posts: </h2>
				<hr>
				<% @posts.each do |post| %>
				<h3><%= link_to post.title, post_path(post), class: 'link-to-text-color' %></h3>
				<% end %>
			</ul>
		</div>
	</div>
</div>
<div class="box">
	<div class="col-lg-12">
		<div class="post-heading">
			<h2>Reviews:</h2>
			<hr>
			<%= render @profile.reviews %>
			<% if user_signed_in? %>

			<div class="row">
